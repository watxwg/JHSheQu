<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shap_bg_ripples_line"
    android:gravity="center">

    <ImageView
        android:id="@+id/myimage_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/icon_head"
        android:layout_margin="@dimen/dp_5" />

    <TextView
        android:id="@+id/mytitle_tv"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/myimage_iv"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="代付款"
        android:textColor="@color/second_txt_color"
        android:textSize="@dimen/dp_11" />

    <TextView
        android:id="@+id/mynumber_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/myimage_iv"
        android:background="@drawable/mall_red_bag"
        android:gravity="center"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10" />

</RelativeLayout>
