<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mall_size_250dp"
        app:canLoop="true" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:text="美的炒锅不粘锅无油烟炒菜锅电磁炉通用锅具"
        android:textColor="@color/mall_black_second"
        android:textSize="@dimen/mall_font_16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:text="¥158"
        android:textColor="@color/mall_color_ff3300"
        android:textSize="@dimen/mall_font_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/mall_color_e6eaed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/mall_运费"
            android:textColor="@color/mall_color_666666"
            android:textSize="@dimen/mall_font_12" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:background="@color/mall_color_e6eaed" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/mall_剩余"
            android:textColor="@color/mall_color_666666"
            android:textSize="@dimen/mall_font_12" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:background="@color/mall_color_e6eaed" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/mall_销量format"
            android:textColor="@color/mall_color_666666"
            android:textSize="@dimen/mall_font_12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mall_color_e6eaed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <TextView
            android:id="@+id/tv_youhui_tag"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_mall_btn4"
            android:gravity="center"
            android:text="@string/mall_优惠"
            android:textColor="@color/white"
            android:textSize="@dimen/mall_font_12" />

        <TextView
            android:id="@+id/tv_youhui_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="满1元送15.00元优惠券"
            android:textColor="@color/mall_black_second"
            android:textSize="@dimen/mall_font_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/mall_color_eaeff3" />

    <LinearLayout
        android:id="@+id/ll_coupon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <TextView
            android:id="@+id/tv_get_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/mall_icon_coupon"
            android:drawablePadding="@dimen/dp_5"
            android:text="@string/mall_领取优惠券"
            android:textColor="@color/mall_color_14aae4"
            android:textSize="@dimen/mall_font_14" />

        <TextView
            android:id="@+id/tv_coupon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="right"
            android:text="¥5优惠券"
            android:textColor="@color/mall_color_666666"
            android:textSize="@dimen/mall_font_14" />

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/mall_arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/mall_color_eaeff3" />

    <LinearLayout
        android:id="@+id/ll_guige"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_5"
            android:text="@string/mall_选择规格"
            android:textColor="@color/mall_black_second"
            android:textSize="@dimen/mall_font_14" />

        <TextView
            android:id="@+id/tv_guige"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="right"
            android:text="蓝色-大号"
            android:textColor="@color/mall_color_666666"
            android:textSize="@dimen/mall_font_14" />

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/mall_arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/mall_color_eaeff3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <com.jhcms.common.widget.RoundImageView
            android:id="@+id/iv_shop_logo"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:src="@mipmap/pic_pro_bigx" />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_shop_logo"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_shop_logo"
            android:text="美的官方旗舰店"
            android:textColor="@color/mall_black"
            android:textSize="@dimen/mall_font_14" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_shop_logo"
            android:layout_alignLeft="@id/tv_shop_name"
            android:text="@string/mall_关注度"
            android:textColor="@color/mall_color_999999"
            android:textSize="@dimen/mall_font_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_tag"
            android:layout_toRightOf="@id/tv_tag"
            android:text="123456"
            android:textColor="@color/mall_color_999999"
            android:textSize="@dimen/mall_font_14" />

        <FrameLayout
            android:id="@+id/fm_come_shop"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/mall_bg_btn_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@mipmap/mall_arrow_right"
                android:text="@string/mall_进店"
                android:textColor="@color/mall_color_666666"
                android:textSize="@dimen/mall_font_12" />
        </FrameLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/mall_color_eaeff3" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:weightSum="2">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_product_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/mall_商品详情"
                android:textColor="@color/mall_black_second"
                android:textSize="@dimen/mall_font_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="bottom"
                android:background="@color/mall_color_e6eaed" />

            <View
                android:id="@+id/v_detail_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/mall_size_33dp"
                android:layout_marginRight="@dimen/mall_size_33dp"
                android:background="@color/mall_Theme" />
        </FrameLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/mall_color_e6eaed" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_product_comments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="true"
                android:gravity="center"
                android:text="@string/mall_商品评价"
                android:textColor="@color/mall_black_second"
                android:textSize="@dimen/mall_font_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="bottom"
                android:background="@color/mall_color_e6eaed" />

            <View
                android:id="@+id/v_comments_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/mall_size_33dp"
                android:layout_marginRight="@dimen/mall_size_33dp"
                android:background="@color/mall_Theme"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_12">

    </FrameLayout>

</LinearLayout>