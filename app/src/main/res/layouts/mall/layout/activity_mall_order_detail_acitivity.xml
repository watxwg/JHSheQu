<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mall_order_detail_acitivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jhcms.mall.activity.MallOrderDetailAcitivity">

    <include layout="@layout/mall_common_titlebar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mall_color_eaeff3">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:background="@color/mall_color_ff7700">

                    <ImageView
                        android:id="@+id/iv_order_status"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:scaleType="fitXY"
                        tools:src="@mipmap/mall_icon_order_des_status01" />

                    <TextView
                        android:id="@+id/tv_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/iv_order_status"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/white"
                        android:textSize="@dimen/mall_font_16"
                        tools:text="@string/mall_交易成功" />

                    <TextView
                        android:id="@+id/tv_order_status_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv_order_status"
                        android:layout_alignLeft="@id/tv_order_status"
                        android:textColor="@color/white"
                        android:textSize="@dimen/mall_font_12"
                        tools:text="商家已发货" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/iv_tag"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:src="@mipmap/mall_order_icon_location" />

                    <TextView
                        android:id="@+id/tv_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_toRightOf="@id/iv_tag"
                        android:text="@string/mall_收货人"
                        android:textColor="@color/mall_black"
                        android:textSize="@dimen/mall_font_14" />

                    <TextView
                        android:id="@+id/tv_receing_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/tv_tag"
                        android:layout_toRightOf="@id/tv_tag"
                        android:textColor="@color/mall_black"
                        android:textSize="@dimen/mall_font_14"
                        tools:text="殷宇萌" />

                    <TextView
                        android:id="@+id/tv_phone_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@id/tv_tag"
                        android:layout_marginRight="@dimen/dp_12"
                        android:textColor="@color/mall_black"
                        android:textSize="@dimen/mall_font_14"
                        tools:text="18756270220" />

                    <TextView
                        android:id="@+id/tv_receing_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_tag"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_toRightOf="@id/iv_tag"
                        android:textColor="@color/mall_color_666666"
                        android:textSize="@dimen/mall_font_12"
                        tools:text="收货地址：安徽省合肥市蜀山区莲花社区管理委员会莲花路819号莲花电子商务产业园E座四楼" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12">
                        <TextView
                            android:id="@+id/tv_shop_name"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/mall_font_14"
                            android:textColor="@color/mall_black"
                            android:drawableLeft="@mipmap/mall_icon_shop"
                            tools:text="魔幻服装官方旗舰店"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="@dimen/dp_10"
                            />
                        <ImageView
                            android:layout_width="@dimen/dp_7"
                            android:layout_height="@dimen/dp_12"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/mall_arrow_right"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/mall_color_e6eaed"/>
                    <LinearLayout
                        android:id="@+id/ll_product_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/mall_color_fafafa"
                        >

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/mall_color_e6eaed"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/mall_font_12"
                            android:textColor="@color/mall_black_second"
                            android:text="@string/mall_配送方式"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/tv_delivery_way"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/mall_font_12"
                            android:textColor="@color/mall_black_second"
                            android:text="@string/mall_快递免运费"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/mall_color_e6eaed"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_12"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/mall_font_12"
                            android:textColor="@color/mall_black_second"
                            android:text="@string/mall_配送方式"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/mall_font_12"
                            android:textColor="@color/mall_black_second"
                            tools:text="暂无"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_130"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mall_size_39dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/mall_font_12"
                            android:textColor="@color/mall_black_second"
                            android:text="@string/mall_优惠"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/tv_youhui_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/mall_font_12"
                            android:textColor="@color/mall_black_second"
                            tools:text="-¥10"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/mall_color_e6eaed"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            style="@style/mall_text_ww_12_333333"
                            android:text="@string/mall_商品总额"
                            android:layout_marginTop="@dimen/dp_13"/>
                        <TextView
                            android:id="@+id/tv_tag1"
                            style="@style/mall_text_ww_12_333333"
                            android:text="@string/mall_商品总额"
                            android:layout_marginTop="@dimen/dp_13"/>
                        <TextView
                            android:id="@+id/tv_total_price"
                            style="@style/mall_text_ww_12_333333"
                            tools:text="¥30"
                            android:layout_alignTop="@id/tv_tag1"
                            android:layout_alignParentRight="true"
                            />
                        <TextView
                            android:id="@+id/tv_tag2"
                            style="@style/mall_text_ww_12_333333"
                            android:text="@string/mall_运费2"
                            android:layout_marginTop="@dimen/dp_11"
                            android:layout_below="@id/tv_tag1"
                            />
                        <TextView
                            android:id="@+id/tv_delivery_prices"
                            style="@style/mall_text_ww_12_333333"
                            tools:text="¥30"
                            android:layout_alignTop="@id/tv_tag2"
                            android:layout_alignParentRight="true"
                            />
                        <TextView
                            android:id="@+id/tv_tag3"
                            style="@style/mall_text_ww_12_333333"
                            android:text="@string/mall_实付款"
                            android:layout_marginTop="@dimen/dp_11"
                            android:layout_below="@id/tv_tag2"
                            />
                        <TextView
                            android:id="@+id/tv_true_price"
                            style="@style/mall_text_ww_12_333333"
                            tools:text="¥30"
                            android:layout_alignTop="@id/tv_tag3"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_order_info_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/mall_font_12">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/mall_font_12"
                        android:textColor="@color/mall_color_999999"
                        tools:text="订单编号：23543543135686535"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_my_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12">
                    <TextView
                        style="@style/mall_text_ww_12_333333"
                        android:layout_gravity="center_vertical"
                        android:text="@string/mall_我的评价"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="@dimen/dp_12"
                        android:src="@mipmap/mall_arrow_right"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/ll_status_btn_conatainer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:layout_gravity="bottom"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_view_logistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mall_font_14"
                android:textColor="@color/mall_black_second"
                android:text="@string/mall_查看物流"
                android:layout_gravity="center_vertical"
                android:background="@drawable/mall_bg_btn3"/>
            <TextView
                android:id="@+id/tv_confirm_receiving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mall_font_14"
                android:textColor="@color/mall_black_second"
                android:text="@string/mall_确认收货"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:background="@drawable/mall_bg_btn3"/>
            <TextView
                android:id="@+id/tv_go_to_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mall_font_14"
                android:textColor="@color/mall_black_second"
                android:text="@string/mall_去评价"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:background="@drawable/mall_bg_btn3"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
