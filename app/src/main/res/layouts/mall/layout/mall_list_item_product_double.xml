<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_product_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mall_size_186dp"
            android:scaleType="fitXY"
            android:src="@mipmap/pic_pro_bigx" />
        <TextView
            android:id="@+id/tv_index"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:textSize="@dimen/mall_font_12"
            android:background="@color/mall_color_ff3300"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_product_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_9"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="冰棒模具 - 绿色-恐龙款…"
        android:textColor="@color/mall_black_second"
        android:textSize="@dimen/mall_font_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="￥15.8"
            android:textColor="@color/mall_red"
            android:textSize="@dimen/mall_font_12" />

        <TextView
            android:id="@+id/tv_sale_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已售：200"
            android:textColor="@color/mall_gray"
            android:textSize="@dimen/mall_font_12" />
    </LinearLayout>
</LinearLayout>