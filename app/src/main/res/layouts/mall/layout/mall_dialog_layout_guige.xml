<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:layout_marginLeft="@dimen/dp_120">
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mall_font_12"
                android:textColor="@color/mall_color_ff3300"
                android:text="¥158"
                android:layout_marginTop="@dimen/dp_12"/>
            <TextView
                android:id="@+id/tv_kucun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mall_font_12"
                android:textColor="@color/mall_color_666666"
                android:text="@string/mall_库存"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/tv_price"/>
            <TextView
                android:id="@+id/tv_guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mall_font_12"
                android:textColor="@color/mall_black_second"
                android:text="@string/mall_请选择规格"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_below="@id/tv_kucun"/>
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/mall_btn_close"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_22"
                android:scaleType="fitXY"
                />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_170"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:orientation="vertical">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/mall_font_14"
                android:textColor="@color/mall_black_second"
                android:text="@string/mall_数量"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/iv_minus"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/mall_btn_minus"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:textSize="@dimen/mall_font_14"
                android:textColor="@color/mall_black_second"
                android:text="1"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/mall_btn_add"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="@color/mall_color_eaeff3"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">
            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/mall_font_16"
                android:textColor="@color/white"
                android:background="@drawable/bg_mall_btn"
                android:text="@string/mall_确定"
                android:gravity="center"/>
        </FrameLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_product_logo"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:src="@mipmap/pic_pro_bigx"
        android:layout_marginLeft="@dimen/dp_10"
        android:scaleType="fitXY"/>
</FrameLayout>