<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEF2F5"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/white" >
        <TextView
            android:layout_marginLeft="@dimen/dp_12"
            android:drawableLeft="@mipmap/mall_btn_shop"
            android:id="@+id/tv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:text="第八号当铺"
            android:textColor="@color/title_color"
            android:textSize="14dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <com.jhcms.common.widget.ListViewForListView
        android:id="@+id/sonlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />
        <LinearLayout
            android:background="@color/white"
            android:paddingLeft="12dp"
            android:paddingRight="@dimen/dp_12"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="配送方式"
                android:textColor="@color/title_color"
                android:textSize="14dp"
                android:gravity="center|left"
                android:layout_weight="1"/>
            <TextView
                android:textSize="14dp"
                android:gravity="center|right"
                android:text="快递￥5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="40dp">
        <TextView
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="买家留言"
            android:textColor="@color/title_color"
            android:gravity="center"/>
        <EditText

            android:id="@+id/BuyerMessage_edit"
            android:paddingLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="点击输入（选填）"
            android:textColor="#FF999999"
            android:textColorHint="@color/third_txt_color"
            android:background="@null"
            android:textSize="14dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="优惠"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/DiscountCoupon_tv"
            android:paddingRight="12dp"
            android:drawablePadding="6dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="使用优惠券"
            android:gravity="center|right"
            android:drawableRight="@mipmap/icon_arrow_right"
            android:textSize="14dp"
            android:textColor="#FF14AAE4"

            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <LinearLayout
        android:paddingRight="12dp"
        android:layout_gravity="center|right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/shop_count_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/title_color"
            android:text="共2件商品"
            android:gravity="center|right"
            />
        <TextView
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:text="合计:"
            android:textColor="@color/title_color"
            android:gravity="center|right"
            />
        <TextView
            android:id="@+id/mShopmoney_tv"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="￥30"
            android:textColor="@color/themColor"
            android:gravity="center"
            />

        </LinearLayout>


</LinearLayout>