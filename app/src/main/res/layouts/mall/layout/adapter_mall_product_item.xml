<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_shop_logo"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:scaleType="fitXY"
        android:src="@mipmap/home_banner_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/iv_shop_logo"
        android:layout_alignTop="@+id/iv_shop_logo"
        android:layout_toRightOf="@+id/iv_shop_logo"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_comment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="韩式风格衣服"
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_comment_spec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="规格： 黑色ML"
            android:textColor="@color/third_txt_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_comm_pices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="￥15"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_comm_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_12"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:text="X1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>