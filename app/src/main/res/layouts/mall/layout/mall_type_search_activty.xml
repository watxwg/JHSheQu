<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jhcms.mall.activity.MallTypeSearchActivty">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FF20AD20">
        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="@dimen/dp_29"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:src="@mipmap/icon_top_back"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_white"
            >
            <TextView
                android:id="@+id/Sort_tv"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="商品"
                android:textColor="#FF333333"
                android:gravity="center"
                android:textSize="14dp"
                android:drawableRight="@mipmap/mall_search_arrow_down"
                />
            <EditText
                android:id="@+id/search_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="搜索商家、 商品"
                android:textColor="#FF999999"
                android:textSize="14dp"
                />
            <ImageView
                android:id="@+id/iv_delete"
                android:src="@mipmap/mall_nav_btn_searchreset"
                android:layout_width="@dimen/dp_20"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:id="@+id/seach_iv"
                android:visibility="gone"
                android:paddingRight="@dimen/dp_5"
                android:src="@mipmap/mall_nav_btn_search_gray"
                android:layout_width="@dimen/dp_20"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <com.jhcms.common.widget.ListenerScrollView
        android:divider="#EEF2F5"
        android:dividerHeight="5dp"
        android:listSelector="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.jhcms.common.widget.ListenerScrollView>

</LinearLayout>
