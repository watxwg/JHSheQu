<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <CheckBox
        android:id="@+id/cb_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="4dp"
        android:button="@drawable/mall_check_box_bg"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cb_addr"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameandmobel_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp_12"
            android:text="殷宇萌-18756270220 "
            android:textColor="@color/title_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_60"
            android:text="收货地址：安徽省合肥市蜀山区莲花社区管理委员会莲花路819号莲花电子商务产业园E座四楼"
            android:textColor="@color/second_txt_color"
            android:textSize="@dimen/dp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/addressupdater_li"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/AdressSelected_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:src="@drawable/mall_radio" />

                <TextView
                    android:id="@+id/addressTitle_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="设为默认地址"
                    android:textColor="@color/title_color"
                    android:textSize="14dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/addressupdate_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_40"
                android:src="@mipmap/mall_my_btn_edit" />

            <ImageView
                android:id="@+id/Adressdelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/mall_my_btn_delete" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
