<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/mall_size_234dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/mall_black_second"
        android:background="@color/mall_color_f2f2f2"
        android:text="@string/分享"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mall_color_e6e6e6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mall_size_146dp"
        android:background="@color/mall_color_f2f2f2"
        android:gravity="center_vertical">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/ll_wx"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="@mipmap/mall_share_wx"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:textSize="@dimen/mall_font_14"
                android:textColor="@color/mall_color_666666"
                android:text="@string/微信"
                android:gravity="center"/>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/ll_qq"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="@mipmap/mall_share_qq"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:textSize="@dimen/mall_font_14"
                android:textColor="@color/mall_color_666666"
                android:text="QQ"
                android:gravity="center"/>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/ll_pyq"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="@mipmap/mall_share_pyq"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:textSize="@dimen/mall_font_14"
                android:textColor="@color/mall_color_666666"
                android:text="@string/mall_朋友圈"
                android:gravity="center"/>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/ll_kj"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="@mipmap/mall_share_kj"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:textSize="@dimen/mall_font_14"
                android:textColor="@color/mall_color_666666"
                android:text="@string/mall_空间"
                android:gravity="center"/>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/mall_black_second"
        android:background="@color/white"
        android:text="@string/cancel"
        android:gravity="center"/>
</LinearLayout>