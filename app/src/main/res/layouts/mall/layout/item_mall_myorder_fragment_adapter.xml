<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <TextView
            android:id="@+id/tv_shopname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/mall_icon_shop"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center|left"
            android:text="魔幻服装官方旗舰店"
            android:textColor="@color/title_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_shopstatu"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="待付款"
            android:textColor="@color/shop_guige"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_050"
        android:background="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingRight="@dimen/dp_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_comm_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="共2件商品"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_shop_pices"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:text="合计：￥30(含运费￥0.00)"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center|right"
            android:orientation="horizontal"
            android:visibility="visible">


            <TextView
                android:id="@+id/tv_two"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/shap_bg_line_white_radius_small"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="@color/title_color"
                android:textSize="14dp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/tv_one"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/shap_bg_line_white_radius_small"
                android:gravity="center"
                android:text="查看物流"
                android:textColor="@color/title_color"
                android:textSize="14dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/tuan_bg_white_with_yellow2_boder"
                android:gravity="center"
                android:text="去支付"
                android:textColor="@color/color_yan"
                android:textSize="14dp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>