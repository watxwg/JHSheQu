<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/popudismiss"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/mall_btn_close"
            android:layout_width="29dp"
            android:layout_height="29dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_50"
            android:text="选择优惠券"
            android:textColor="@color/title_color"
            android:textSize="16dp"
            android:gravity="center"
            />
        <ImageView
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="29dp"
            android:layout_height="29dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:id="@+id/pay1"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/mall_selecter_disable"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/mall_paywayzhi"/>
        <TextView
            android:paddingLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="支付宝支付"
            android:textColor="@color/title_color"
            android:textSize="14dp"
            android:gravity="center|left"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:id="@+id/pay2"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image2"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/mall_selecter_disable"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/mall_paywaywei"/>
        <TextView
            android:paddingLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="支付宝支付"
            android:textColor="@color/title_color"
            android:textSize="14dp"
            android:gravity="center|left"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:id="@+id/pay3"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image3"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/mall_selecter_disable"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/mall_paywayyue"/>
        <TextView
            android:paddingLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="支付宝支付"
            android:textColor="@color/title_color"
            android:textSize="14dp"
            android:gravity="center|left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">
        <TextView
            android:id="@+id/PayMoney"
            android:text="去支付 30:00"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:background="@drawable/mall_red_bag"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>