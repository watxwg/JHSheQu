<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/tv_select_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mall_font_13"
        android:textColor="@color/mall_color_4a4c4d"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="热销"
        android:layout_centerVertical="true"/>
    <View
        android:id="@+id/v_selected"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_13"
        android:background="@mipmap/mall_icon_selected"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:visibility="gone"
        android:layout_centerVertical="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mall_color_e6eaed"/>

</RelativeLayout>