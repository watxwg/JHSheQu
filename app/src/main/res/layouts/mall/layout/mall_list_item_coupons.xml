<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="@dimen/dp_150"
    android:layout_height="@dimen/dp_70"
    android:background="@drawable/mall_bg"
    android:paddingLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_10">
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="13"
        android:textColor="@color/mall_black_second"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mall_font_10"
        android:text="@string/mall_RMB"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_toRightOf="@id/tv_price"/>
    <TextView
        android:id="@+id/tv_press"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_18"
        android:background="@color/mall_color_f96720"
        android:text="@string/mall_点击领取"
        android:textSize="@dimen/mall_font_10"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/tv_order_ammount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mall_font_10"
        android:textColor="@color/mall_black_second"
        android:text="@string/mall_满使用"
        android:layout_above="@id/tv_press"
        android:layout_alignLeft="@id/tv_press"
        android:layout_marginBottom="@dimen/dp_5"
        android:maxLines="1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mall_font_10"
        android:textColor="@color/mall_black_second"
        android:text="@string/mall_优惠券"
        android:layout_above="@id/tv_order_ammount"
        android:layout_alignLeft="@id/tv_order_ammount"
        android:maxLines="1"
        android:layout_marginBottom="@dimen/dp_5"
        />
</RelativeLayout>