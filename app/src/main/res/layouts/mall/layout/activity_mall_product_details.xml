<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEF2F5"
    tools:context="com.jhcms.mall.activity.MallProductDetailsActivity">
    <RelativeLayout
        android:id="@+id/titlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            layout="@layout/tuan_title_layout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/titlelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <com.jhcms.common.widget.ListenerScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/convenientBanner"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            cube_ptr:canLoop="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/white"
            android:text="美的炒锅不粘锅无油烟炒菜锅电磁炉通用锅具"
            android:textColor="@color/title_color"
            android:gravity="center|left"
            android:paddingLeft="12dp"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="￥158"
            android:background="@color/white"
            android:gravity="center|left"
            android:textColor="@color/themColor"
            android:textSize="16dp"
            android:paddingLeft="12dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="运费：￥8"
                android:textColor="#FF666666"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:paddingLeft="35dp"
                android:layout_weight="1"/>
            <View
                android:layout_gravity="center_vertical"
                android:layout_width="1dp"
                android:layout_height="30dp"/>
            <TextView
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="运费：￥8"
                android:textColor="#FF666666"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:paddingLeft="35dp"
                android:layout_weight="1"/>
            <View
                android:layout_gravity="center_vertical"
                android:layout_width="1dp"
                android:layout_height="30dp"/>
            <TextView
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="运费：￥8"
                android:textColor="#FF666666"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:paddingLeft="35dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray"/>
        <LinearLayout
            android:background="@color/white"
            android:paddingRight="@dimen/dp_12"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:textColor="@color/white"
                android:text="优惠"
                android:textSize="12dp"
                android:gravity="center"
                android:background="@drawable/shap_red_bag"
                />
            <TextView
                android:paddingLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="满1元送15.00元优惠券"
                android:textSize="12dp"
                android:gravity="center|left"
                android:textColor="@color/title_color"/>

        </LinearLayout>
        <TextView
            android:id="@+id/getCoupon"
            android:drawableLeft="@mipmap/mall_icon_coupon"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:drawablePadding="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:layout_height="40dp"
            android:background="@color/white"
            android:text="领取优惠券"
            android:gravity="center|left"
            android:textColor="@color/color_blue"
            android:textSize="14dp"
            android:drawableRight="@mipmap/icon_arrow_right"
            android:paddingRight="12dp"
            />
        <TextView
            android:id="@+id/selectedstandard"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:paddingLeft="12dp"
            android:text="选择规格"
            android:textColor="#FF333333"
            android:textSize="14dp"
            android:drawableRight="@mipmap/icon_arrow_right"
            android:paddingRight="12dp"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_marginLeft="12dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="美的官方旗舰店"
                    android:textColor="@color/home_bottombar_font"
                    android:textSize="14dp"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:text="关注度：524625"
                    android:textColor="@color/third_txt_color"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:textSize="12dp"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_30"
              android:layout_marginRight="@dimen/dp_12"
                android:text="进店"
                android:textColor="@color/third_txt_color"
                android:textSize="12dp"
                android:gravity="center"
                android:background="@drawable/bg_mall"
                android:paddingRight="5dp"
                android:drawableRight="@mipmap/icon_arrow_right"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="37dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/mall_label_smg"
                android:text="企业认证"
                android:textColor="@color/third_txt_color"
                android:gravity="center|left"
                android:drawablePadding="6dp"
                android:textSize="12dp"
                android:paddingRight="20dp"
               />
            <TextView
                android:paddingLeft="20dp"
                android:drawableLeft="@mipmap/mall_label_smg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="担保交易"
                android:textColor="@color/third_txt_color"
                android:textSize="12dp"
                android:gravity="center|left"
                android:drawablePadding="6dp"
              />

        </LinearLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_FindFragment_title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            app:tabIndicatorColor="@color/blue"
            app:tabSelectedTextColor="@color/blue"
            app:tabTextColor="@color/third_txt_color"
            app:tabIndicatorHeight="1dp"
            />
            <!--cube_ptr:tabIndicatorColor="@color/themColor"-->
            <!--cube_ptr:tabSelectedTextColor="@color/themColor"-->

        <com.jhcms.common.widget.CustomViewpager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/white" />

    </LinearLayout>
    </com.jhcms.common.widget.ListenerScrollView>
   </com.liaoinstan.springview.widget.SpringView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/buttom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/Shop_call"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">
                <ImageView
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_gravity="center"
                    android:layout_width="24.6dp"
                    android:layout_height="24.6dp"
                    android:src="@mipmap/mall_btn_call"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="联系商家"
                    android:gravity="center"
                    android:textSize="@dimen/dp_10"
                    android:textColor="@color/txt_color"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/Shop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_width="24.6dp"
                    android:layout_height="24.6dp"
                    android:src="@mipmap/mall_btn_shop"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="店铺"
                    android:gravity="center"
                    android:textSize="@dimen/dp_10"
                    android:textColor="@color/txt_color"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/collect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">
                <ImageView
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/collectimaage"
                    android:layout_gravity="center"
                    android:layout_width="24.6dp"
                    android:layout_height="24.6dp"
                    android:src="@mipmap/mall_btn_collect"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="收藏"
                    android:gravity="center"
                    android:textSize="@dimen/dp_10"
                    android:textColor="@color/txt_color"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#FF9900"
                android:text="加入购物车"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#FF3300"
                android:text="立即购买"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_weight="3"/>

        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/buttom"
        android:layout_width="80dp"
        android:layout_height="@dimen/dp_40"
        android:background="#99000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/backHome"
                android:layout_width="20dp"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/mall_btn_back_home"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:background="#4DFFFFFF"/>
            <ImageView
                android:id="@+id/BackShopCart_Iv"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/mall_btn_cart_dot"/>

        </LinearLayout>


    </FrameLayout>
</RelativeLayout>
