<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jhcms.mall.activity.MallMyOrderActivity">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/全部"
                android:textColor="@color/selector_text_theme_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_payment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/待付款"
                android:textColor="@color/selector_text_theme_dark" />

            <TextView
                android:id="@+id/tv_payment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/tv_payment"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/mall_red_bag"
                android:gravity="center"
                android:minHeight="@dimen/dp_15"
                android:minWidth="@dimen/dp_15"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_10"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_delivered"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_delivered"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/待发货"
                android:textColor="@color/selector_text_theme_dark" />

            <TextView
                android:id="@+id/tv_delivered_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/tv_delivered"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/mall_red_bag"
                android:gravity="center"
                android:minHeight="@dimen/dp_15"
                android:minWidth="@dimen/dp_15"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_10"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_paid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_paid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/待收货"
                android:textColor="@color/selector_text_theme_dark" />

            <TextView
                android:id="@+id/tv_paid_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/tv_paid"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/mall_red_bag"
                android:gravity="center"
                android:minHeight="@dimen/dp_15"
                android:minWidth="@dimen/dp_15"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_10"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_evaluated"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_evaluated"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/待评价"
                android:textColor="@color/selector_text_theme_dark" />

            <TextView
                android:id="@+id/tv_evaluated_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/tv_evaluated"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/mall_red_bag"
                android:gravity="center"
                android:minHeight="@dimen/dp_15"
                android:minWidth="@dimen/dp_15"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_10"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_refunds"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_refunds"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="@string/退款售后"
                android:textColor="@color/selector_text_theme_dark" />

            <TextView
                android:id="@+id/tv_refunds_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/tv_refunds"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/mall_red_bag"
                android:gravity="center"
                android:minHeight="@dimen/dp_15"
                android:minWidth="@dimen/dp_15"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_10"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">

        <ImageView
            android:id="@+id/img_bottom_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/themColor" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="共一件商品"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center"
            android:text="合计:"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:text="￥30(含运费)"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>

</LinearLayout>
