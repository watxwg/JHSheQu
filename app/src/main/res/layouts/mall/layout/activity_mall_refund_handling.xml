<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mall_refund_handling"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jhcms.mall.activity.MallRefundHandlingActivity">
    <include layout="@layout/mall_common_titlebar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mall_color_eaeff3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:background="@color/mall_color_ff7700">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/mall_font_16"
                    android:textColor="@color/white"
                    android:text="@string/mall_等待商家处理退款申请"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"/>
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/mall_icon_order_des_status06"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_20"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingRight="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_12">
                <TextView
                    style="@style/mall_text_ww_12_333333"
                    android:layout_height="@dimen/mall_size_39dp"
                    android:text="@string/mall_如商家同意申请"
                    android:gravity="center_vertical"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/mall_color_e6eaed"/>
                <TextView
                    style="@style/mall_text_ww_12_333333"
                    android:layout_height="@dimen/mall_size_39dp"
                    android:text="@string/mall_如商家拒绝"
                    android:gravity="center_vertical"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/mall_color_e6eaed"/>
                <TextView
                    style="@style/mall_text_ww_12_333333"
                    android:layout_height="@dimen/mall_size_39dp"
                    android:text="@string/mall_如商家未处理"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:id="@+id/tv_tag"
                    style="@style/mall_text_ww_12_9999999"
                    android:text="@string/mall_退款编号"/>
                <TextView
                    android:id="@+id/tv_refund_number"
                    style="@style/mall_text_ww_12_9999999"
                    android:layout_width="match_parent"
                    tools:text="25425542652233552"
                    android:layout_toRightOf="@id/tv_tag"/>
                <TextView
                    android:id="@+id/tv_tag2"
                    android:layout_below="@id/tv_refund_number"
                    android:layout_marginTop="@dimen/dp_8"
                    style="@style/mall_text_ww_12_9999999"
                    android:text="@string/mall_退款方式"/>
                <TextView
                    android:id="@+id/tv_refund_way"
                    style="@style/mall_text_ww_12_9999999"
                    android:layout_width="match_parent"
                    tools:text="尽退款"
                    android:layout_toRightOf="@id/tv_tag2"
                    android:layout_alignTop="@id/tv_tag2"/>
                <TextView
                    android:id="@+id/tv_tag3"
                    android:layout_below="@id/tv_refund_way"
                    android:layout_marginTop="@dimen/dp_8"
                    style="@style/mall_text_ww_12_9999999"
                    android:text="@string/mall_退款金额"/>
                <TextView
                    android:id="@+id/tv_refund_amount"
                    style="@style/mall_text_ww_12_9999999"
                    android:layout_width="match_parent"
                    tools:text="尽退款"
                    android:layout_toRightOf="@id/tv_tag3"
                    android:layout_alignTop="@id/tv_tag3"/>
                <TextView
                    android:id="@+id/tv_tag4"
                    android:layout_below="@id/tv_refund_amount"
                    android:layout_marginTop="@dimen/dp_8"
                    style="@style/mall_text_ww_12_9999999"
                    android:text="@string/mall_退款说明"/>
                <TextView
                    android:id="@+id/tv_refund_explain"
                    style="@style/mall_text_ww_12_9999999"
                    android:layout_width="match_parent"
                    tools:text="买了超过三天还没发货，气死了！退款买了超过三天还没发货，气死了！退款..."
                    android:layout_toRightOf="@id/tv_tag4"
                    android:layout_alignTop="@id/tv_tag4"/>
                <TextView
                    android:id="@+id/tv_tag5"
                    android:layout_below="@id/tv_refund_explain"
                    android:layout_marginTop="@dimen/dp_8"
                    style="@style/mall_text_ww_12_9999999"
                    android:text="@string/mall_退款手机"/>
                <TextView
                    android:id="@+id/tv_refund_phone"
                    style="@style/mall_text_ww_12_9999999"
                    android:layout_width="match_parent"
                    tools:text="13515608638"
                    android:layout_toRightOf="@id/tv_tag5"
                    android:layout_alignTop="@id/tv_tag5"/>
                <TextView
                    android:id="@+id/tv_tag6"
                    android:layout_below="@id/tv_refund_phone"
                    android:layout_marginTop="@dimen/dp_8"
                    style="@style/mall_text_ww_12_9999999"
                    android:text="@string/mall_申请时间"/>
                <TextView
                    android:id="@+id/tv_refund_time"
                    style="@style/mall_text_ww_12_9999999"
                    android:layout_width="match_parent"
                    tools:text="2016-11-24  12:00"
                    android:layout_toRightOf="@id/tv_tag6"
                    android:layout_alignTop="@id/tv_tag6"/>


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20">
                <TextView
                    android:id="@+id/tv_view_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/mall_font_16"
                    android:textColor="@color/white"
                    android:text="@string/mall_查看详情"
                    android:background="@drawable/mall_bg_btn2"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_weiquan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/mall_font_16"
                    android:textColor="@color/white"
                    android:text="@string/mall_申请维权"
                    android:background="@drawable/bg_mall_btn"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
