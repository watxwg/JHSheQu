<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:background="@color/white"
    android:padding="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10">
    <com.jhcms.common.widget.RoundImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:src="@mipmap/pic_pro_bigx"
        android:layout_marginRight="@dimen/dp_10"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mall_font_14"
        android:textColor="@color/mall_black"
        android:text="【美的】5元特惠充值券"
        android:layout_alignTop="@id/iv_logo"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@id/iv_logo"
        />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_12"
        android:textColor="@color/mall_color_ff3300"
        android:text="¥5"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"/>
    <TextView
        android:id="@+id/tv_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_12"
        android:textColor="@color/mall_color_999999"
        android:text="满20元可用"
        android:layout_alignBottom="@id/tv_price"
        android:layout_toRightOf="@id/tv_price"/>
    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mall_font_12"
        android:textColor="@color/mall_color_999999"
        android:text="@string/mall_截止"
        android:layout_alignBottom="@id/iv_logo"
        android:layout_toRightOf="@id/iv_logo"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mall_font_12"
        android:textColor="@color/mall_color_999999"
        android:text="2017-08-28"
        android:layout_alignBottom="@id/tv_tag"
        android:layout_toRightOf="@id/tv_tag"/>
    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/mall_bg_btn2"
        android:textSize="@dimen/mall_font_14"
        android:textColor="@color/white"
        android:text="@string/mall_立即领取"
        android:gravity="center"
        android:layout_alignBottom="@id/iv_logo"
        android:layout_alignParentRight="true"/>

</RelativeLayout>