<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_product_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mall_size_186dp"
        android:scaleType="fitXY"
        android:src="@mipmap/pic_pro_bigx" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mall_color_eaeff3" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="冰棒模具 - 绿色-恐龙款"
        android:textColor="@color/black"
        android:textSize="@dimen/mall_font_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"

            android:text="￥15.8"
            android:textColor="@color/mall_color_ff6600"
            android:textSize="@dimen/mall_font_14" />

        <TextView
            android:id="@+id/tv_sale_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="已售200"
            android:textColor="@color/mall_gray"
            android:textSize="@dimen/mall_font_12"
            android:paddingRight="@dimen/dp_12"
            android:gravity="right"/>
    </LinearLayout>

</LinearLayout>