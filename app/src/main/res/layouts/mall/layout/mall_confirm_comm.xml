<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingRight="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_comm_pic"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:scaleType="fitXY"
        android:src="@mipmap/home_banner_default" />

    <TextView
        android:id="@+id/tv_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_comm_pic"
        android:layout_toRightOf="@+id/iv_comm_pic"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="冰棒模具 - 绿色收纳盒绿色收纳盒绿色收纳盒绿色收纳盒绿色收纳盒绿色收纳盒绿色收纳盒绿色收纳盒-恐龙款2016家居新款"
        android:textColor="@color/txt_color"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_comm_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_comm_pic"
        android:layout_toRightOf="@+id/iv_comm_pic"
        android:text="规格：粉色ML"
        android:textColor="@color/third_txt_color"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_comm_pices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_comm_pic"
        android:layout_toLeftOf="@+id/tv_comm_num"
        android:paddingRight="@dimen/dp_10"
        android:text="￥15"
        android:textColor="@color/shop_guige"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_comm_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_comm_pic"
        android:layout_alignParentRight="true"
        android:text="X1"
        android:textColor="@color/third_txt_color"
        android:textSize="@dimen/sp_12" />

    <View
        android:id="@+id/line_staff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_050"
        android:layout_alignParentBottom="true"
        android:background="@color/qing" />

</RelativeLayout>