<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/dp_80"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_category"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/tv_cate_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mall_size_27dp"
        android:gravity="center_horizontal"
        android:textSize="@dimen/mall_font_12"
        android:textColor="@color/mall_black_second"
        android:layout_marginTop="@dimen/dp_5"
        android:maxLines="2"/>

</LinearLayout>