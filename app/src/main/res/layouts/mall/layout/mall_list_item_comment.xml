<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_12">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mall_color_e6eaed"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12">
        <com.jhcms.common.widget.RoundImageView
            android:id="@+id/iv_customer_pic"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:src="@mipmap/home_banner_default"/>
        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_customer_pic"
            android:textSize="@dimen/mall_font_12"
            android:textColor="@color/mall_color_666666"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="张三丰"/>
        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/mall_font_12"
            android:textColor="@color/mall_color_999999"
            android:text="@string/mall_规格"
            android:layout_alignLeft="@id/tv_customer_name"
            android:layout_alignBottom="@id/iv_customer_pic"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/mall_font_12"
            android:textColor="@color/mall_color_999999"
            android:text="2016/06/05 05:05 "
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/iv_customer_pic"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mall_font_14"
        android:textColor="@color/mall_black_second"
        android:text="用了，超级好用，下次还光临"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/mall_font_12"
        android:layout_marginRight="@dimen/mall_font_12"
        android:layout_marginBottom="@dimen/dp_10"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_comment_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        >

    </android.support.v7.widget.RecyclerView>
</LinearLayout>