<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:id="@+id/Top_lay"
    tools:context="com.jhcms.mall.activity.MallRefundActivity">
    <include
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        layout="@layout/common_title"
        />
    <TextView
        android:id="@+id/applyService_tv"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:text="请选择申请服务"
        android:gravity="center|left"
        android:textColor="@color/title_color"
        android:textSize="@dimen/dp_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:drawableRight="@mipmap/icon_black_arrow_down"/>
    <TextView
        android:id="@+id/SelectGoodStatu_tv"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:text="请选择货物状态"
        android:gravity="center|left"
        android:textColor="@color/title_color"
        android:textSize="@dimen/dp_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:drawableRight="@mipmap/icon_black_arrow_down"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_15">
        <TextView
            android:paddingLeft="@dimen/dp_15"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/title_color"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="退款金额："/>
        <TextView
            android:id="@+id/GoodsMoneny_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="￥30"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_14"
            android:textColor="#FF2A00"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_15">
        <EditText
            android:id="@+id/reFoudContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="@color/second_txt_color"
            android:hint="退款说明"
            android:textSize="@dimen/dp_14"
            android:paddingLeft="@dimen/dp_10"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机号码:"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:textColor="@color/title_color"
            />
        <EditText
            android:id="@+id/phonenamber_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="@color/second_txt_color"
            android:hint="填写手机号码便于卖家联系您"
            android:textSize="@dimen/dp_14"
            android:paddingLeft="@dimen/dp_10"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--<ImageView-->
            <!--android:id="@+id/addPic"-->
            <!--android:layout_marginLeft="@dimen/dp_15"-->
            <!--android:layout_width="@dimen/dp_90"-->
            <!--android:layout_height="@dimen/dp_90"-->
            <!--android:src="@mipmap/mall_my_btn_addpic"/>-->
        <com.jhcms.common.widget.GridViewForScrollView
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:visibility="visible"
            android:id="@+id/mGridview"
            android:numColumns="3"
            android:horizontalSpacing="@dimen/dp_20"
            android:listSelector="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.jhcms.common.widget.GridViewForScrollView>




    </LinearLayout>


    <TextView
        android:background="@drawable/bg_mall_blue"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="提交申请"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:id="@+id/BtnCommoit"
        />


</LinearLayout>
