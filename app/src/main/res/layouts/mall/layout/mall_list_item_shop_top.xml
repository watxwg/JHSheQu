<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mall_size_135dp"
    android:layout_marginTop="@dimen/dp_15"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.jhcms.common.widget.RoundImageView
            android:id="@+id/iv_shop_logo"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/pic_pro_bigx" />
        <TextView
            android:id="@+id/tv_index"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:textSize="@dimen/mall_font_12"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/mall_color_ff3300"
            android:text="1"
            android:layout_alignTop="@id/iv_shop_logo"
            android:layout_toRightOf="@id/iv_shop_logo"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_index"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/tv_index"
            android:text="DQ官方旗舰店"
            android:textColor="@color/mall_black_second"
            android:textSize="@dimen/mall_font_14" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_shop_logo"
            android:layout_alignLeft="@id/tv_index"
            android:text="@string/mall_关注度"
            android:textColor="@color/mall_gray"
            android:textSize="@dimen/mall_font_12" />

        <TextView
            android:id="@+id/tv_focus_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_tag"
            android:layout_toRightOf="@id/tv_tag"
            android:text="12345"
            android:textColor="@color/mall_gray"
            android:textSize="@dimen/mall_font_12" />

        <FrameLayout
            android:id="@+id/fl_jindian"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/mall_bg_btn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@mipmap/mall_arrow_right"
                android:text="@string/mall_进店"
                android:textColor="@color/mall_color_666666"
                android:textSize="@dimen/mall_font_12" />
        </FrameLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_product_logo_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

        </android.support.v7.widget.RecyclerView>
    </FrameLayout>

</LinearLayout>