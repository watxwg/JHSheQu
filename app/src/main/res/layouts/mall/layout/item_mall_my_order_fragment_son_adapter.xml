<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/shopImage"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/GoodName_tv"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="韩式风格衣服"
                android:textColor="@color/title_color"
                android:paddingLeft="@dimen/dp_10"
                android:gravity="center|left"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ShopStandard"
                    android:paddingLeft="@dimen/dp_10"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_25"
                    android:textColor="@color/second_txt_color"
                    android:text="规格： 黑色ML"
                    android:gravity="center|left"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/paystatu"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="取消订单"
                    android:textSize="@dimen/dp_14"
                    android:textColor="@color/title_color"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/shap_bg_line_white_radius_small"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Shopmoney_tv"
                    android:paddingLeft="@dimen/dp_10"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="￥15"/>
                <TextView
                    android:id="@+id/good_count"
                   android:layout_marginRight="@dimen/dp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="X1"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>