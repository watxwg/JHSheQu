<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jhcms.mall.fragment.MallProuductEvaluateFragment">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:gravity="center"
      android:orientation="horizontal">
      <TextView
          android:layout_marginLeft="12dp"
          android:id="@+id/textviewall"
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:background="@drawable/bg_mall_blue"
          android:text="全部(200)"
          android:textColor="#FFFFFFFF"
          android:gravity="center"
          android:textSize="14dp"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/textviewSatisfaction"
          android:layout_marginLeft="10dp"
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:background="@drawable/bg_mall"
          android:text="满意(180)"
          android:textColor="@color/title_color"
          android:textSize="14dp"
          android:gravity="center"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/textviewDissatisfaction"
          android:layout_marginLeft="10dp"
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:text="不满意(20)"
          android:textColor="@color/title_color"
          android:textSize="14dp"
          android:gravity="center"
          android:background="@drawable/bg_mall"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/tvhavepictures"
          android:layout_marginLeft="10dp"
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:text="有图(20)"
          android:layout_marginRight="12dp"
          android:textColor="@color/title_color"
          android:textSize="14dp"
          android:gravity="center"
          android:background="@drawable/bg_mall"
          android:layout_weight="1"/>
  </LinearLayout>
<com.jhcms.common.widget.ListenerScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <com.jhcms.common.widget.ListViewForScrollView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.jhcms.common.widget.ListViewForScrollView>
</com.jhcms.common.widget.ListenerScrollView>

</LinearLayout>
