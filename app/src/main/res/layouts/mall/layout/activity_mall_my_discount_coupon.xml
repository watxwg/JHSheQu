<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.jhcms.mall.activity.MallMyDiscountCouponActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themColor">

        <include
            android:id="@+id/title"
            layout="@layout/common_title"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:tabSelectedTextColor="@color/themColor"
        app:tabIndicatorColor="@color/themColor"
        app:tabTextAppearance="@style/TuanTabLayoutTextStyle"
        app:tabBackground="@null"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@android:color/white" />
    <TextView
        android:id="@+id/GetCoupon"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="领优惠券"
        android:gravity="center"
        android:textSize="@dimen/dp_16"
        android:background="@drawable/bg_theme"
        android:layout_marginBottom="12dp"
        android:textColor="@color/white"
        />

</LinearLayout>
