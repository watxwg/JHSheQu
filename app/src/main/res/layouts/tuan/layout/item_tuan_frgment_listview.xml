<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_bg_ripples_line"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_comm_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@mipmap/home_banner_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_comm_pic"
        android:layout_alignTop="@+id/iv_comm_pic"
        android:layout_toRightOf="@+id/iv_comm_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_comm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="此处显示团购商品名称…"
            android:textColor="@color/home_bottombar_font"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_comm_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:text="￥15.8"
                android:textColor="@color/shop_guige"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_comm_oldPrices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tuan_gridview_line"
                android:text="￥15.8"
                android:textColor="@color/third_txt_color"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_comm_sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已售200"
            android:textColor="@color/third_txt_color"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>