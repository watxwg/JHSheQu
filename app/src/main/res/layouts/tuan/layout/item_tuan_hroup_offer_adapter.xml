<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <com.jhcms.common.widget.RoundImageView
            android:id="@+id/shopImage"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_width="30dp"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:paddingLeft="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/Goodname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:textColor="@color/title_color"
                android:textSize="14dp"
                android:gravity="center|left"/>
            <TextView
                android:id="@+id/ordertime"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dp_10"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/OrderStatus_tv"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/dp_14"
            android:gravity="center"
            android:text="代付款"
            android:textColor="@color/color_yan"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <LinearLayout
        android:id="@+id/Orderdetail"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/消费"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/title_color"
            android:gravity="center"/>
        <TextView
            android:paddingLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/title_color"
            android:gravity="center"
            android:text="￥100"
            android:id="@+id/good_count"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/实付"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/title_color"
            android:gravity="center"/>
        <TextView
            android:paddingLeft="@dimen/dp_10"
            android:id="@+id/goodmoney"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/title_color"
            android:gravity="center"
            android:text="￥12"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <LinearLayout
        android:id="@+id/laybotttom"
        android:background="@color/white"
        android:paddingRight="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_12"
        android:layout_width="match_parent"
        android:gravity="center|right"
        android:layout_height="44dp">
        <TextView
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/CancelOrder_tv"
            android:layout_width="80dp"
            android:layout_height="@dimen/dp_30"
            android:gravity="center"
            android:background="@drawable/shap_bg_line_white_radius"
            android:textColor="@color/title_color"
            android:text="取消订单"
            />
        <TextView
            android:id="@+id/playStatu"
            android:layout_width="80dp"
            android:layout_height="@dimen/dp_30"
            android:gravity="center"
            android:background="@drawable/tuan_bg_white_with_yellow2_boder"
            android:textColor="#ff6600"
            android:text="去支付"/>
    </LinearLayout>


</LinearLayout>