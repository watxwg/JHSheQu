<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.jhcms.tuangou.fragment.Frgtuangoods">
    <LinearLayout
        android:id="@+id/selected_llayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/Sort_linlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sorttv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="分类"
                android:textSize="@dimen/dp_14"
                android:textColor="#FF333333"
                android:paddingLeft="@dimen/dp_15"
                android:gravity="center"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/sortiv"
                android:layout_width="12dp"
                android:layout_height="7dp"
                android:layout_marginTop="17.5dp"
                android:layout_marginLeft="8.5dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/icon_black_arrow_down"/>
            <TextView
                android:layout_marginTop="9dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="9dp"
                android:background="#e6eaed"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Aredlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Areatv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="区域"
                android:textSize="@dimen/dp_14"
                android:textColor="#FF333333"
                android:paddingLeft="@dimen/dp_15"
                android:gravity="center"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/Areaiv"
                android:layout_width="12dp"
                android:layout_height="7dp"
                android:layout_marginTop="17.5dp"
                android:layout_marginLeft="8.5dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/icon_black_arrow_down"/>
            <TextView
                android:layout_marginTop="9dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="9dp"
                android:background="#e6eaed"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/orderlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/order_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="排序"
                android:textColor="#FF333333"
                android:textSize="@dimen/dp_14"
                android:paddingLeft="@dimen/dp_15"
                android:gravity="center"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/oder_iv"
                android:layout_width="12dp"
                android:layout_height="7dp"
                android:layout_marginTop="17.5dp"
                android:layout_marginLeft="8.5dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/icon_black_arrow_down"/>
            <TextView
                android:layout_marginTop="9dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="9dp"
                android:background="#e6eaed"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/single_Iv"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@mipmap/tuan_btn_switch_two_yes"
            android:layout_marginTop="@dimen/dp_12"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/linerlayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jhcms.common.widget.GridViewForScrollView
            android:id="@+id/goods_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="2dp"
            android:padding="1dp"
            android:background="#c0c0c0"
            ></com.jhcms.common.widget.GridViewForScrollView>
        <com.jhcms.common.widget.ListViewForListView
            android:visibility="gone"
            android:id="@+id/goods_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.jhcms.common.widget.ListViewForListView>

    </LinearLayout>



</LinearLayout>
