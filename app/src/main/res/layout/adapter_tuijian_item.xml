<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_comm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/qing"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_comm_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/ad4" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_comm_pic"
        android:layout_alignRight="@+id/iv_comm_pic"
        android:layout_below="@+id/iv_comm_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_comm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="此处显示团购商品名称…"
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_comm_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥15.8"
                android:textColor="@color/shop_guige"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_comm_oldPrices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tuan_gridview_line"
                android:text="￥15.8"
                android:textColor="@color/third_txt_color"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_comm_sold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center|left"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="已售200"
            android:textColor="@color/third_txt_color"
            android:textSize="12sp" />
    </LinearLayout>


</RelativeLayout>