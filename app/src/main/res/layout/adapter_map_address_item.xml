<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_bg_ripples_line"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_16"
        android:layout_margin="@dimen/dp_10"
        android:src="@mipmap/index_icon_location" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_address_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="德瑞克装饰"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_address_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="莲花社区管理委员会莲花路819号莲花电子商务产业园"
            android:textColor="@color/third_txt_color"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/shopcar_line" />

    </LinearLayout>

</LinearLayout>