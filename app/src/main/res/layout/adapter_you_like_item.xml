<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_comm"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_270"
    android:layout_marginTop="@dimen/dp_3"
    android:layout_marginLeft="@dimen/dp_050"
    android:layout_marginRight="@dimen/dp_050"
    android:background="@drawable/shap_bg_ripples_line"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_comm_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:scaleType="fitXY"
        android:src="@mipmap/home_banner_default" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_050"
        android:background="@color/background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_comm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="---"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_comm_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="ï¿¥---"
                android:textColor="@color/themColor"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="---"
                android:textColor="@color/third_txt_color"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>