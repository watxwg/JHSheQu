<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/all_rlay"
    android:orientation="vertical"
    tools:context="com.jhcms.waimaiV3.activity.RechargeActivity">
    <include layout="@layout/title" />
    <TextView
        android:paddingTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingBottom="@dimen/dp_20"
        android:textSize="@dimen/dp_16"
        android:gravity="center"
        android:text="选择充值面额"/>
<com.jhcms.common.widget.GridViewForScrollView
    android:id="@+id/gridview"
    android:numColumns="2"
    android:listSelector="@color/background"
    android:verticalSpacing="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</com.jhcms.common.widget.GridViewForScrollView>
    <TextView
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/chongzhi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="@string/充值"
        android:background="@drawable/waimai_shap_bg_yan_radius"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:gravity="center"/>

</LinearLayout>
