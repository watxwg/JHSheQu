<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shopcar_line"
    android:orientation="vertical">
    <com.jhcms.common.widget.GridRecyclerView
        android:id="@+id/rl_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layoutAnimation="@anim/grid_layout_animation"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/tv_cancle"
        android:background="@drawable/shap_bg_ripples_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:text="取消"
        android:textColor="@color/third_txt_color"
        android:textSize="@dimen/sp_16" />

</LinearLayout>