<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="@dimen/dp_5"
    app:contentPadding="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.jhcms.common.widget.RoundImageView
            android:id="@+id/iv_quan_logo"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@mipmap/pic_pro_big" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_quan_logo"
            android:layout_alignTop="@+id/iv_quan_logo"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_quan_logo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_quan_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="【丰收日集团】60元特惠优惠券"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/tv_quan_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥60"
                    android:textColor="@color/themColor"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/tv_quan_manjian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_quan_price"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/tv_quan_price"
                    android:text="满300元可用"
                    android:textColor="@color/third_txt_color"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_quan_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/tv_price"
                    android:gravity="center"
                    android:text="截止：2016-12-18"
                    android:textColor="@color/third_txt_color"
                    android:textSize="@dimen/sp_12" />

                <Button
                    android:id="@+id/bt_quan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_quan_time"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shap_bg_theme_radius"
                    android:text="立即使用"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>