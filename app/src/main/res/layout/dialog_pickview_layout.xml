<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_dialog">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:text="11:46送达"
        android:textColor="@color/title_color"
        android:textSize="@dimen/sp_16" />

    <RelativeLayout
        android:id="@+id/rl_pickerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time">

        <View
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@color/color_blue" />

        <com.jhcms.common.widget.PickerView
            android:id="@+id/pickerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150" />

        <View
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_100"
            android:background="@color/color_blue" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_determine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_pickerview"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shap_bg_ripples_line"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:paddingTop="@dimen/dp_10"
        android:text="确定"
        android:textColor="@color/themColor"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>