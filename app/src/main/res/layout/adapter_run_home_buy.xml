<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/dp_80"
    android:background="@color/mall_color_f7f7f7"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentRight="true"
        android:src="@mipmap/home_banner_default"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_cate_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/mall_black"
        android:text="生活用品"
        android:layout_toLeftOf="@id/iv_photo"
        android:layout_marginTop="@dimen/dp_20"
        android:maxLines="1"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/tv_cate_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/mall_black"
        android:text="身边的便利店"
        android:layout_toLeftOf="@id/iv_photo"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_alignParentBottom="true"
        android:maxLines="1"
        android:ellipsize="end"/>

</RelativeLayout>