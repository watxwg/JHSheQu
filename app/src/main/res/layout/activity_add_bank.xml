<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.jhcms.shequ.activity.AddBankActivity">

    <include layout="@layout/title" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/background"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:text="请绑定您的的信用卡"
            android:textColor="@color/second_txt_color"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="13dp"
            android:paddingRight="@dimen/dp_13">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/卡类型"
                android:textColor="@color/title_color"
                android:textSize="14sp" />

                <ImageView
                    android:id="@+id/Iv_BankOne"
                    android:layout_width="44dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/card_visa_once_selected" />
            <ImageView
                android:id="@+id/Iv_bankTwo"
                android:layout_width="44dp"
                android:layout_height="28dp"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/card_master_two" />
            <ImageView
                android:id="@+id/Iv_BankThree"
                android:layout_width="44dp"
                android:layout_height="28dp"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/card_ae_thre" />


        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="13dp"
                android:paddingRight="13dp">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/卡名称"
                    android:textColor="@color/title_color"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/Tv_BankName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="@string/请给你信用卡起个名字"
                    android:paddingLeft="@dimen/dp_15"
                    android:textColor="@color/title_color"
                    android:textColorHint="@color/second_txt_color"
                    android:textSize="12sp"
                    />

            </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="13dp"
            android:paddingRight="13dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/卡号"
                android:textColor="@color/title_color"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/Tv_BankNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center|left"
                android:hint="6666666666666666"
                android:paddingLeft="@dimen/dp_15"
                android:textColor="@color/title_color"
                android:textColorHint="@color/second_txt_color"
                android:textSize="12sp"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="13dp"
            android:paddingRight="13dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/有效期"
                android:textColor="@color/title_color"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/Tv_BankTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center|left"
                android:hint="@string/请选择卡的月份年份"
                android:paddingLeft="@dimen/dp_15"
                android:textColor="@color/title_color"
                android:textColorHint="@color/second_txt_color"
                android:textSize="12sp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="13dp"
            android:paddingRight="13dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/安全码"
                android:textColor="@color/title_color"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/Tv_BankSecurityCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center|left"
                android:hint="@string/请输入信用卡背面7位安全码"
                android:paddingLeft="@dimen/dp_15"
                android:textColor="@color/title_color"
                android:textColorHint="@color/second_txt_color"
                android:textSize="12sp"
                />

        </LinearLayout>




    </LinearLayout>

    <TextView
        android:id="@+id/Tv_AddBankSubmit"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:textColor="@color/white"
        android:text="确定绑定"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/bg_theme"
        android:textSize="@dimen/sp_17"
        android:gravity="center"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/Tv_unbindCard"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:textColor="@color/white"
        android:text="解除绑定"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/bg_unbindcard"
        android:textSize="@dimen/sp_17"
        android:gravity="center"
        />

</LinearLayout>
