<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jhcms="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <com.jhcms.common.widget.RoundImageView
        android:id="@+id/riv_eva_shop_logo"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_5"
         />

    <TextView
        android:id="@+id/tv_eva_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/title_color"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <View
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_1"
            android:background="@color/shopcar_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:text="商家打分"
            android:textColor="@color/third_txt_color"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_1"
            android:background="@color/shopcar_line" />
    </LinearLayout>
    <!--<com.jhcms.common.widget.RatingBar xmlns:lxhRatingBar="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/rb_eva_shop"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--lxhRatingBar:starDistance="5dp"-->
        <!--lxhRatingBar:starEmpty="@mipmap/star_big_gray"-->
        <!--lxhRatingBar:starFill="@mipmap/star_big_orange"-->
        <!--lxhRatingBar:starSize="30dp" />-->
    <RatingBar
        android:id="@+id/rb_eva_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"/>
    <!--<com.jhcms.common.widget.RatingBar
        android:id="@+id/rb_eva_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        jhcms:canEdit="true"
        jhcms:countSelected="3"
        jhcms:differentSize="false"
        jhcms:dividerWidth="5dp"
        jhcms:starCount="5"
        jhcms:stateResId="@drawable/comment_ratingbar_selector"
        jhcms:widthAndHeight="20dp" />-->

    <EditText
        android:id="@+id/et_eva_shop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shap_bg_et"
        android:gravity="left"
        android:hint="写下您对商家的建议吧~"
        android:padding="@dimen/dp_10"
        android:textColorHint="@color/third_txt_color"
        android:textSize="@dimen/sp_12" />
    <TextView
        android:id="@+id/content_text"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_16"
        android:textColor="@color/title_color"
        android:paddingLeft="@dimen/dp_10"/>
   <com.jhcms.common.widget.GridViewForScrollView
       android:id="@+id/PhonoGrild"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:listSelector="#00000000"
       android:numColumns="5"></com.jhcms.common.widget.GridViewForScrollView>
  <TextView
      android:layout_marginLeft="@dimen/dp_15"
      android:layout_marginRight="@dimen/dp_15"
      android:id="@+id/shop_reply"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_gray"
      android:visibility="gone"
      android:paddingBottom="@dimen/dp_10"
      android:paddingLeft="@dimen/dp_10"
      android:text="haha"/>
</LinearLayout>